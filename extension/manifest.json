{
  "manifest_version": 3,
  "name": "conscious",
  "version": "1.1.0",
  "description": "Track your social media usage and focus levels in real-time with granular analytics.",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "alarms"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/activityTracker.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "src/dashboard/dashboard.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}